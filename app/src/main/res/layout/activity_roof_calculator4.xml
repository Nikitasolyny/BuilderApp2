<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".RoofCalculator">

    <include layout="@layout/toolbar" />

    <ImageView
        android:id="@+id/examplemansard"
        android:layout_width="212dp"
        android:layout_height="172dp"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:src="@drawable/formansard" />

    <EditText
        android:id="@+id/editTextLength4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/examplemansard"
        android:hint="Введите сторону А (в метрах)"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/editTextWidth4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите сторону B (в метрах)"
        android:inputType="numberDecimal"
        android:layout_below="@id/editTextLength4" />

    <EditText
        android:id="@+id/editTextHeight4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите высоту H (в метрах)"
        android:inputType="numberDecimal"
        android:layout_below="@id/editTextWidth4" />

    <EditText
        android:id="@+id/editTextC2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите смещение С (в метрах)"
        android:inputType="numberDecimal"
        android:layout_below="@id/editTextHeight4" />


    <EditText
        android:id="@+id/sves4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите длину свеса(по умолчанию 0.5м)"
        android:inputType="textLongMessage"
        android:layout_below="@id/editTextC2" />

    <EditText
        android:id="@+id/editTextD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите высоту чердака d (в метрах)"
        android:inputType="textLongMessage"
        android:layout_below="@id/sves4" />


    <EditText
        android:id="@+id/editTextName4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Имя проекта"
        android:inputType="textLongMessage"
        android:layout_below="@id/editTextD" />

    <Button
        android:id="@+id/buttonCalculate4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Рассчитать"
        android:layout_below="@id/editTextName4" />

    <TextView
        android:id="@+id/textViewResult4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonCalculate4"
        android:text=""
        android:textSize="18sp"/>


</RelativeLayout>
