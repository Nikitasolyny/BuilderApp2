<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".RoofCalculator">

    <include layout="@layout/toolbar" />

    <ImageView
        android:id="@+id/examplevalma"
        android:layout_width="212dp"
        android:layout_height="172dp"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:src="@drawable/forvalma" />

    <EditText
        android:id="@+id/editTextLength2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/examplevalma"
        android:hint="Введите сторону А (в метрах)"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/editTextWidth2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите сторону B (в метрах)"
        android:inputType="numberDecimal"
        android:layout_below="@id/editTextLength2"

/>

    <EditText
        android:id="@+id/editTextHeight2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите высоту H (в метрах)"
        android:inputType="numberDecimal"
        android:layout_below="@id/editTextWidth2" />


    <EditText
        android:id="@+id/sves2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите длину свеса(по умолчанию 0.5м)"
        android:inputType="textLongMessage"
        android:layout_below="@id/editTextHeight2" />

    <EditText
        android:id="@+id/editTextC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите смещение С (в метрах)"
        android:inputType="textLongMessage"
        android:layout_below="@id/sves2" />

    <EditText
        android:id="@+id/editTextName2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Имя проекта"
        android:inputType="textLongMessage"
        android:layout_below="@id/editTextC"/>


    <Button
        android:id="@+id/buttonCalculate2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Рассчитать"
        android:layout_below="@id/editTextName2" />

    <TextView
        android:id="@+id/textViewResult2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonCalculate2"
        android:text=""
        android:textSize="18sp"/>


</RelativeLayout>
